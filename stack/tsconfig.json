{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./source",
    "declaration": true,
    // "lib": ["es5"],
    "module": "CommonJS",
    "moduleResolution": "node",
    // "isolatedModules": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": false,
    "outDir": "library",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    // "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "node_modules/json-d-ts"]
  },
  "compileOnSave": true,
  "exclude": [
    "**/*.spec.ts",
    "android",
    "build",
    "docs",
    "ios",
    "lib",
    "node_modules",
    "test"
  ],
  "include": ["./source/**/*"],
  "types": ["node", "./source/types"]
}
